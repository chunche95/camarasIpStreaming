# Configuración del servidor
PORT=3033
HOST=0.0.0.0
NODE_ENV=development

# Credenciales RTSP por defecto
VIEWER_USER=admin
VIEWER_PASS=admin123

# Configuración de escaneo
START_IP=192.168.1.1
END_IP=192.168.1.254
SCAN_CONCURRENCY=5
RTSP_TIMEOUT_MS=500
FFMPEG_TIMEOUT_MS=500

# Configuración de streaming
WS_BASE_PORT=9999

# Configuración de archivos
CAMERAS_FILE=./data/cameras.json
LOG_DIR=./logs
LOG_LEVEL=debug

# Intervalo de re-escaneo (en ms, por defecto 5 minutos)
RESCAN_INTERVAL_MS=300000


# URL de la API backend
REACT_APP_API_URL=http://localhost:3033

# Configuración de la aplicación
REACT_APP_TITLE=Sistema de Monitorización de Cámaras
REACT_APP_VERSION=1.0.0

# Configuración para desarrollo
# Habilitar hot reloading
FAST_REFRESH=true

# Omitir verificación de ESLint en desarrollo
ESLINT_NO_DEV_ERRORS=true

# Puerto para desarrollo
PORT=3000